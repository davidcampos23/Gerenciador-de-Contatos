@{
    ViewData["Title"] = "Editar Contato";
}

<div class="text-center">
    <h1 class="display-4">Cadastrar Contato</h1>

</div>

<form>
    <div class="mb-3">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" placeholder="Digite o nome do contato">
    </div>

    <div class="mb-3">
        <label for="email">E-mail</label>
        <input type="text" class="form-control" placeholder="Digite o e-mail do contato">
    </div>

    <div class="mb-3">
        <label for="celular">Celular</label>
        <input type="text" class="form-control" placeholder="Digite o celular do contato">
    </div>

    <button type="submit" class="btn btn-primary d-block w-100">Alterar</button><br />
    <a class="btn btn-secondary d-block w-100" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>