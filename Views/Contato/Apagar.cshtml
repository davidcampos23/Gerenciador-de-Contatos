@model ContatoModel
@{
    ViewData["Title"] = "Apagar Contato";
}

<div class="text-center">
    <h3>Deseja Apagar o Contato (@Model.Nome)?</h3>
</div>

<a class="btn btn-primary d-block w-100" role="button" asp-controller="Contato" asp-action="Index">Cancelar</a><br/>
<a class="btn btn-danger d-block w-100" role="button" asp-controller="Contato" asp-action="Deletar" asp-route-id="@Model.Id">Confirmar</a>